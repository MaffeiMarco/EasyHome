<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ly_home_proprietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/bolletteInq"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:text="Bills"
            android:textAlignment="center"
            android:drawableLeft="@drawable/bill_inquilino"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/pulizie"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:text="Bills"
            android:textAlignment="center"
            android:drawableLeft="@drawable/pulizie"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/annunci"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:text=""
            android:textAlignment="center"
            android:drawableLeft="@drawable/annunci"
            android:layout_marginBottom="40dp"/>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>