<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >

            <ImageButton
                android:id="@+id/inq_luceButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sfondo_button"
                android:src="@drawable/luce" />

            <TextView
                android:id="@+id/inq_luceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="83dp"
                android:text="@string/luce"
                android:textColor="@color/colorAccent"
                android:textSize="26dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            >

            <ImageButton
                android:id="@+id/inq_acquaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/sfondo_button"
                android:src="@drawable/acqua" />

            <TextView
                android:id="@+id/inq_acquaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="83dp"
                android:text="@string/acqua"
                android:textColor="@color/colorAccent"
                android:textSize="26dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >
            <ImageButton
                android:id="@+id/inq_casaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sfondo_button"
                android:src="@drawable/other" />

            <TextView
                android:id="@+id/inq_casaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="83dp"
                android:text="@string/extra"
                android:textColor="@color/colorAccent"
                android:textSize="26dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            >

            <ImageButton
                android:id="@+id/inq_gasButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sfondo_button"
                android:forceDarkAllowed="false"
                android:src="@drawable/gas"
                />
            <TextView
                android:id="@+id/inq_gasView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="83dp"
                android:text="@string/gas"
                android:textColor="@color/colorAccent"
                android:textSize="26dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>