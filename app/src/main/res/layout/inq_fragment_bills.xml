<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/luceButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:src="@drawable/luce" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/acquaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cursor_color"
                android:src="@drawable/acqua" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/cursor_color">
            <ImageButton
                android:id="@+id/casaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF4734"
                android:src="@drawable/casa" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/black">

            <ImageButton
                android:id="@+id/gasButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2337E8"
                android:src="@drawable/gas" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>